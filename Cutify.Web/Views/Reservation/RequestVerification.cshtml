@{
    ViewData["Title"] = "Phone Verification";
}

<h2>Phone Verification</h2>

<form asp-action="RequestVerification" method="post">
    <div class="form-group">
        <label for="phone">Enter your phone number</label>
        <input type="text" name="phone" class="form-control" placeholder="+994XXXXXXXXX" required />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Doğrulama kodunu göndər</button>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div class="text-danger mt-2">
        @Html.ValidationSummary()
    </div>
}
