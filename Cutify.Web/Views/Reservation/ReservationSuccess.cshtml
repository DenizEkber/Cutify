@{
    ViewData["Title"] = "Rezervasiya Uğurla Tamamlandı";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>


        .success-container {
            text-align: center;
            padding: 2rem;
            max-width: 90%;
            width: 100%;
        }

        .success-icon {
            background-color: #212529;
            color: white;
            width: 80px;
            height: 80px;
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 2rem;
            position: relative;
        }

            .success-icon::before {
                content: "";
                position: absolute;
                width: 100%;
                height: 100%;
                border-radius: 50%;
                background-color: #212529;
                z-index: -1;
                transform: scale(1.2);
                clip-path: polygon(50% 0%, 83% 12%, 100% 43%, 94% 78%, 68% 100%, 32% 100%, 6% 78%, 0% 43%, 17% 12%);
            }

            .success-icon i {
                font-size: 2rem;
            }

        .success-title {
            font-weight: 700;
            font-size: 1.8rem;
            margin-bottom: 1rem;
        }

        .success-subtitle {
            color: #6c757d;
            margin-bottom: 3rem;
            line-height: 1.6;
        }

        .btn-return {
            background-color: #212529;
            color: white;
            padding: 0.8rem 2rem;
            border-radius: 5px;
            font-weight: 500;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

            .btn-return:hover {
                background-color: #343a40;
                color: white;
            }

        /* Animation for checkmark */
        @@keyframes checkmark {
            0% {
                transform: scale(0);
                opacity: 0;
            }

            50% {
                transform: scale(1.2);
            }

            100% {
                transform: scale(1);
                opacity: 1;
            }
        }

        .animate-checkmark {
            animation: checkmark 0.5s ease-in-out forwards;
        }
    </style>
}

    <div class="success-container">

        <div class="success-icon">
            <i class="fas fa-check animate-checkmark"></i>
        </div>

        <h1 class="success-title">Rezervasiyan uğurla tamamlandı!</h1>

        <p class="success-subtitle">
            Rezervasiyan tamamlandı. Seçdiyin vaxtda bərbərin hazır olacaq və səni gözləyəcək.
        </p>

        <a href="/Home/Index" class="btn-return" id="homeButton">Əsas səhifəyə qayıt</a>
    </div>


@section Scripts {
    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Simulate brief delay before allowing redirect (optional)
        document.getElementById('homeButton').addEventListener('click', function(e) {
            e.preventDefault();
            const button = this;
            button.style.pointerEvents = 'none';
            button.style.opacity = '0.7';

            setTimeout(function() {
                window.location.href = button.getAttribute('href');
            }, 1000); // 1 second delay
        });

        // Ensure animation plays when page loads
        document.addEventListener('DOMContentLoaded', function() {
            const checkmark = document.querySelector('.animate-checkmark');
            checkmark.style.opacity = '0';

            setTimeout(() => {
                checkmark.style.opacity = '1';
            }, 100);
        });
    </script>
}
